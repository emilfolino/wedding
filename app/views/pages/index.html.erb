<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Page title</th>
      <th>Page body</th>
      <th>Wedding</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.page_title %></td>
        <td><%= page.page_body %></td>
        <td><%= page.wedding %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

