<div style="max-width: 700px;">

<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t("title") %><br>
    <%= f.text_field :page_title, class: "form-control" %>
  </div><br>

  <div class="field">
    <%= f.label t("body") %><br>
    <%= f.text_area :page_body, class: "form-control ckeditor" %>
  </div><br>

  <div class="field">
    <%= f.label t("image") %><br>
    <%= f.text_field :imageurl, class: "form-control" %>
  </div><br>

  <p><b><%= t("language") %></b><br>
    <% @languages.each do |language| %>
      <%= radio_button_tag("language_id", language.id, language.id == @page.language_id) %> <%= language.name %><br>
    <% end %>
  </p><br>

  <p><b><%= t("sorting") %></b><br>
    <%= select_tag "sort_order", options_for_select(@sort_order, @page.id) %>
  </p><br>

  <div class="actions">
    <%= f.submit t("save"), class: "btn btn-primary" %>
  </div>

<% end %>

</div>
