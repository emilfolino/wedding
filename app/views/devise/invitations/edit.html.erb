<h2><%= t 'devise.invitations.edit.header' %></h2>
<p class="email-reminder"><%= t("use_this_email") + ": " %><b><%= @new_user.email %></b></p>
<p><%= t("password_hint") %></p>

<div style="max-width:500px;">
<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <label><%= t("password") %></label>
  <%= f.password_field :password, class: "form-control" %><br>

  <label><%= t("password_confirmation") %></label>
  <%= f.password_field :password_confirmation, class: "form-control" %><br>

  <p><%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary" %></p>
<% end %>



</div>
