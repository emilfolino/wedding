<h2>Ny gäst <%= @wedding.title %></h2>

<%= link_to t("back"), wedding_path(current_user.wedding), :class => "btn btn-primary" %>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <p><%= f.label field %><br />
    <%= f.text_field field %></p>
  <% end -%>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><b>Språk</b><br>
    <% @languages.each do |language| %>
      <%= radio_box_tag("language", language.id)) %> <%= language.name %><br>
    <% end %>
  </p>

  <p><%= f.submit t("devise.invitations.new.submit_button") %></p>
<% end %>
